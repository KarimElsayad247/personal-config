// Place your key bindings in this file to override the defaultsauto[]
[
    {
        "key": "ctrl+;",
        "command": "extension.insertSemicolonWithNewLine",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+shift+/",
        "command": "-extension.insertSemicolonWithNewLine",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+shift+;",
        "command": "extension.insertSemicolon",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+shift+t",
        "command": "workbench.action.selectTheme",
    },
    // {
    //     "key": "ctrl+shift+h",
    //     "command": "workbench.action.terminal.newWithCwd",
    //     "args": {
    //       "cwd": "${fileDirname} "
    //     }
    // },
    {
        "key": "ctrl+/",
        "command": "-extension.insertSemicolon",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+alt+]",
        "command": "editor.action.indentLines",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "ctrl+]",
        "command": "-editor.action.indentLines",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "ctrl+alt+[",
        "command": "editor.action.outdentLines",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "ctrl+[",
        "command": "-editor.action.outdentLines",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "ctrl+]",
        "command": "cursorEnd",
        "when": "textInputFocus"
    },
    {
        "key": "end",
        "command": "cursorEnd",
        "when": "textInputFocus"
    },    
    {
        "key": "ctrl+[",
        "command": "cursorHome",
        "when": "textInputFocus"
    },
    {
        "key": "home",
        "command": "cursorHome",
        "when": "textInputFocus"
    },
    {
        "key": "alt+l",
        "command": "cursorRight",
        "when": "textInputFocus"
    },
    {
        "key": "right",
        "command": "-cursorRight",
        "when": "textInputFocus && editorTextFocus"
    },
    {
        "key": "alt+k",
        "command": "cursorDown",
        "when": "textInputFocus"
    },
    {
        "key": "down",
        "command": "-cursorDown",
        "when": "textInputFocus && editorTextFocus"
    },
    {
        "key": "alt+j",
        "command": "cursorLeft",
        "when": "textInputFocus"
    },
    {
        "key": "left",
        "command": "-cursorLeft",
        "when": "textInputFocus && editorTextFocus"
    },
    {
        "key": "alt+i",
        "command": "cursorUp",
        "when": "textInputFocus"
    },
    {
        "key": "up",
        "command": "-cursorUp",
        "when": "textInputFocus && editorTextFocus"
    },
    // Toggle between terminal and editor focus
    { 
        "key": "ctrl+`", 
        "command": "workbench.action.terminal.focus"},
    {
        "key": "ctrl+`",
        "command": "workbench.action.focusActiveEditorGroup",
        "when": "terminalFocus"
    },
    {
        "key": "ctrl+shift+alt+l",
        "command": "LOVE.launch"
    },
    {
        "key": "alt+l",
        "command": "-LOVE.launch"
    },
    {
        "key": "ctrl+shift+alt+m",
        "command": "editor.action.toggleMinimap"
    },
    {
        "key": "alt+1 alt+2",
        "command": "workbench.action.toggleActivityBarVisibility"
    },
    {
        "key": "ctrl+,",
        "command": "workbench.action.openSettings",
        "args": {
            "openToSide": true
        }
    },
    {
        "key": "alt+`",
        "command": "workbench.action.maximizeEditor"
    }
]